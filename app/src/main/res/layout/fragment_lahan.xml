<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_tab">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_lahan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_add_lahan"
        tools:listitem="@layout/item_lahan" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_lahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_40"
        android:layout_marginEnd="@dimen/dimen_40"
        android:layout_marginBottom="@dimen/dimen_20"
        android:padding="@dimen/dimen_12"
        android:text="@string/btn_lahan"
        android:textAllCaps="false"
        android:textSize="@dimen/font_14"
        app:cornerRadius="25.5dp"
        app:backgroundTint="@color/color_btn_orange" />

</RelativeLayout>